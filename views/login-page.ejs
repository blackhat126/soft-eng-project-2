<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="login-page.css" rel="stylesheet">
    <title>Document</title>
</head>
<body>
    <div class="hero">
        <div class="form-box">
            <div class="button-box">
                <div id="btn"></div>
                <button type="button" class="toggle-btn" onclick="entry()">Entry</button>
                <button type="button" class="toggle-btn" onclick="supervisor()">Supervisor</button>
                <button type="button" class="toggle-btn" onclick="manager()">Manager</button>
            </div>
            <div class="social-icons">
                <img src="fb.png">
                <img src="tw.png">
                <img src="gp.png">
            </div>
            <form id="login" class="input-group" action="/" method="POST">
                <input name="user-id" type="text" class="input-field" placeholder="Username" required>
                <input name="password" type="password" class="input-field" placeholder="Enter Password" required>
                <input type="checkbox" class="check-box"><span>Remember Password</span>
                <button type="submit" class="submit-btn">Log in</button>
            </form>
        </div>
    </div>
    <script>
        let slideButton = document.getElementById('btn');
        function entry() {
            slideButton.style.left = '0px';
        }

        function supervisor() {
            slideButton.style.left = '110px';
        }

        function manager() {
            slideButton.style.left = '235px';
        }
    </script>
</body>
</html>